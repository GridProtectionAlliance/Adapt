<UserControl x:Class="Adapt.View.Visualization.VisToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Adapt.View.Visualization"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel Orientation="Horizontal" Background="Gray">
            <Button ToolTip="Reset Graphs to show full Dataset" Margin="10">
                Reset
            </Button>
            <StackPanel Margin="20,2,2,2"  Orientation="Horizontal">
                <Label Content="Available Data: "/>
                <TextBlock Text="{Binding DataStart}" Margin="2" VerticalAlignment="Center"/>
                <Label Content=" - "/>
                <TextBlock Text="{Binding DataEnd}" Margin="2" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
